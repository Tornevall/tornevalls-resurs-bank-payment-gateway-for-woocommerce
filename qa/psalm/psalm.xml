<?xml version="1.0"?>
<psalm
        cacheDirectory="cache"
        autoloader="../../autoload.php">
    <projectFiles>
        <directory name="../../src" />
        <ignoreFiles>
            <directory name="../../src/Gateway" />
            <directory name="../../src/Module" />
            <directory name="../../src/ResursBank" />
            <directory name="../../src/Service" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <RedundantConditionGivenDocblockType>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </RedundantConditionGivenDocblockType>
        <TypeDoesNotContainType>
            <errorLevel type="suppress">
                <file name="../../src/Util/Url.php" />
            </errorLevel>
        </TypeDoesNotContainType>
        <UndefinedFunction>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </UndefinedFunction>
        <RedundantCastGivenDocblockType>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </RedundantCastGivenDocblockType>
        <UndefinedConstant>
            <errorLevel type="suppress">
                <file name="../../src/Util/Url.php" />
            </errorLevel>
        </UndefinedConstant>
        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </UndefinedClass>
        <MixedMethodCall>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </MixedMethodCall>
        <MixedAssignment>
            <errorLevel type="suppress">
                <directory name="../../src" />
            </errorLevel>
        </MixedAssignment>
    </issueHandlers>
</psalm>
