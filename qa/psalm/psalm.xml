<?xml version="1.0"?>
<psalm
    cacheDirectory="cache">
    <projectFiles>
        <directory name="../../src" />
        <directory name="../../tests" />
        <ignoreFiles>
            <file name="../../src/Lib/Utilities/DataConverter.php" />
            <file name="../../tests/Utilities/MockSessionTrait.php" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="../../tests" />
                <file name="../../src/Lib/Utilities/Generic.php" />
            </errorLevel>
        </PropertyNotSetInConstructor>
        <MixedPropertyFetch>
            <errorLevel type="suppress">
                <directory name="./" />
            </errorLevel>
        </MixedPropertyFetch>
        <InvalidNullableReturnType>
            <errorLevel type="suppress">
                <file name="../../src/Config.php" />
            </errorLevel>
        </InvalidNullableReturnType>
        <PossiblyNullPropertyFetch>
            <errorLevel type="suppress">
                <file name="../../src/Config.php" />
            </errorLevel>
        </PossiblyNullPropertyFetch>
        <NullableReturnStatement>
            <errorLevel type="suppress">
                <file name="../../src/Config.php" />
            </errorLevel>
        </NullableReturnStatement>
        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="../../src/Lib/Model/Model.php" />
            </errorLevel>
        </MixedAssignment>
    </issueHandlers>
</psalm>
